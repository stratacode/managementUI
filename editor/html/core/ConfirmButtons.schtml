<span style="position: relative; top: -2px">
  <%! boolean enabled = true; %>
  <a id="cbutton" abstract="true" disabled=":= !enabled" style="text-decoration: none">
    <img id="cbImage" class=':= "confirmButtonImage" + (!enabled ? " disabledImage" : "")'/>
  </a>

  <a id="okButton" extends="cbutton">
     <img id="cbImage" src="/images/ok.png"/>
  </a>
  <a id="cancelButton" extends="cbutton">
     <img id="cbImage" src="/images/cancel.png"/>
  </a>
</span>
